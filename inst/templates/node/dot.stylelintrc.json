{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "at-rule-no-unknown": null,
    "no-empty-source": null,
    "scss/at-rule-no-unknown": true,
    "selector-id-pattern": [
      "^([a-z][a-z0-9]*)([-_][a-z0-9]+)*$",
      {
        "message": "Expected custom property name to be kebab-case or snake-case"
      }
    ]
  }
}
